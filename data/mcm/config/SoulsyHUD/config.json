{
  "$schema": "https://raw.githubusercontent.com/Exit-9B/MCM-Helper/main/docs/config.schema.json",
  "modName": "SoulsyHUD",
  "displayName": "SoulsyHUD",
  "minMcmVersion": 13,
  "cursorFillMode": "topToBottom",
  "content": [
    {
      "text": "$SoulsyHUD_Controls_HeaderText",
      "type": "header"
    },
    {
      "id": "uPowerCycleKey:Controls",
      "text": "$SoulsyHUD_Controls_PowerCycleKey_OptionText",
      "help": "$SoulsyHUD_Controls_PowerCycleKey_InfoText",
      "type": "keymap",
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uUtilityCycleKey:Controls",
      "text": "$SoulsyHUD_Controls_UtilityCycleKey_OptionText",
      "help": "$SoulsyHUD_Controls_UtilityCycleKey_InfoText",
      "type": "keymap",
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uLeftCycleKey:Controls",
      "text": "$SoulsyHUD_Controls_LeftCycleKey_OptionText",
      "help": "$SoulsyHUD_Controls_LeftCycleKey_InfoText",
      "type": "keymap",
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uRightCycleKey:Controls",
      "text": "$SoulsyHUD_Controls_RightCycleKey_OptionText",
      "help": "$SoulsyHUD_Controls_RightCycleKey_InfoText",
      "type": "keymap",
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uUtilityActivateKey:Controls",
      "text": "$SoulsyHUD_Controls_ActivateKey_OptionText",
      "help": "$SoulsyHUD_Controls_ActivateKey_InfoText",
      "type": "keymap",
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uShowHideKey:Controls",
      "text": "$SoulsyHUD_Controls_ShowHideKey_OptionText",
      "help": "$SoulsyHUD_Controls_ShowHideKey_InfoText",
      "type": "keymap",
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uRefreshKey:Controls",
      "text": "$SoulsyHUD_Controls_RefreshKey_OptionText",
      "help": "$SoulsyHUD_Controls_RefreshKey_InfoText",
      "type": "keymap",
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "text": "$SoulsyHUD_Options_Options_HeaderText",
      "type": "header",
      "position": 1
    },
    {
      "id": "uMaxCycleLength:Options",
      "text": "$SoulsyHUD_Options_Length_OptionText",
      "help": "$SoulsyHUD_Options_Length_InfoText",
      "type": "slider",
      "valueOptions": {
        "min": 2,
        "max": 15,
        "step": 1,
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uEquipDelay:Options",
      "text": "$SoulsyHUD_Options_EquipDelay_OptionText",
      "help": "$SoulsyHUD_Options_EquipDelay_InfoText",
      "type": "slider",
      "valueOptions": {
        "min": 0,
        "max": 2500,
        "step": 50,
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "bFade:Options",
      "text": "$SoulsyHUD_Options_Fade_OptionText",
      "type": "toggle",
      "help": "$SoulsyHUD_Options_Fade_InfoText",
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uFadeDelay:Options",
      "text": "$SoulsyHUD_Options_FadeDelay_OptionText",
      "help": "$SoulsyHUD_Options_FadeDelay_InfoText",
      "type": "slider",
      "valueOptions": {
        "min": 0,
        "max": 5000,
        "step": 100,
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "uControllerKind:Options",
      "text": "$SoulsyHUD_Options_Controller_OptionText",
      "type": "enum",
      "help": "$SoulsyHUD_Options_Controller_InfoText.",
      "valueOptions": {
        "options": [
          "$SoulsyHUD_Controls_PC",
          "$SoulsyHUD_Controls_PS",
          "$SoulsyHUD_Controls_Xbox"
        ],
        "sourceType": "ModSettingInt",
        "defaultValue": 0
      }
    }
  ]
}
